<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_fragHome">

    <fragment
        android:id="@+id/nav_fragHome"
        android:name="com.example.onlinemarket.view.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_wholeProductsFragment"
            app:destination="@id/wholeProductsFragment" />
        <action
            android:id="@+id/action_nav_fragHome_to_productDetailLoadingFragment"
            app:destination="@id/productDetailLoadingFragment" />
        <action
            android:id="@+id/action_nav_fragHome_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_top"
            app:popEnterAnim="@anim/slide_in_top"
            app:popExitAnim="@anim/slide_out_bottom"
            />
    </fragment>

    <fragment
        android:id="@+id/wholeProductsFragment"
        android:name="com.example.onlinemarket.view.fragment.WholeProductsFragment"
        android:label="WholeProductsFragment"
        tools:layout="@layout/fragment_whole_products">
        <argument
            android:name="orderBy"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="categoryId"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_wholeProductsFragment_to_productDetailLoadingFragment"
            app:destination="@id/productDetailLoadingFragment" />

    </fragment>

    <fragment
        android:id="@+id/nav_fragCategory"
        android:name="com.example.onlinemarket.view.fragment.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_nav_fragCategory_to_categoryProductsLoadingFragment"
            app:destination="@id/categoryProductsLoadingFragment" />
        <action
            android:id="@+id/action_nav_fragCategory_to_searchFragment2"
            app:destination="@id/searchFragment" />

    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.onlinemarket.view.fragment.ProductDetailFragment"
        android:label="ProductDetailFragment">
        <argument
            android:name="product"
            app:argType="com.example.onlinemarket.data.model.Product" />
    </fragment>


    <fragment
        android:id="@+id/categoryProductsLoadingFragment"
        android:name="com.example.onlinemarket.view.fragment.CategoryProductsLoadingFragment"
        android:label="fragment_category_products_loading"
        tools:layout="@layout/fragment_loading">
        <action
            android:id="@+id/action_categoryProductsLoadingFragment_to_wholeProductsFragment"
            app:destination="@id/wholeProductsFragment"
            app:popUpTo="@id/categoryProductsLoadingFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="categoryId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/productDetailLoadingFragment"
        android:name="com.example.onlinemarket.view.fragment.ProductDetailLoadingFragment"
        android:label="ProductDetailLoadingFragment">
        <action
            android:id="@+id/action_loadingFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment"
            app:popUpTo="@id/productDetailLoadingFragment"
            app:popUpToInclusive="true"

            />

        <argument
            android:name="productId"
            app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/nav_fragCart"
        android:name="com.example.onlinemarket.view.fragment.CartProductsLoadingFragment"
        android:label="CartProductsLoadingFragment" >
        <action
            android:id="@+id/action_nav_fragCart_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.onlinemarket.view.fragment.CartFragment"
        android:label="CartFragment" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.onlinemarket.view.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_productDetailLoadingFragment"
            app:destination="@id/productDetailLoadingFragment" />
        <action
            android:id="@+id/action_searchFragment_to_wholeProductsFragment"
            app:destination="@id/wholeProductsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_fragLogin"
        android:name="com.example.onlinemarket.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />


</navigation>